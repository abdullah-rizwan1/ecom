// supplier table creation script
CREATE TABLE Supplier(
        id INTEGER PRIMARY KEY NOT NULL AUTO_INCREMENT,
        first_name VARCHAR(255) NOT NULL,
        last_name VARCHAR(255) NOT NULL,
        email VARCHAR(255) NOT NULL,
        password VARCHAR(255),
        created_at TIMESTAMP);


//store table creation script
CREATE TABLE Store(
        store_id INTEGER PRIMARY KEY NOT NULL AUTO_INCREMENT,
        store_name VARCHAR(255) NOT NULL,
        FOREIGN KEY (supplier_id) REFERENCES Supplier(id)
);

// get supplier stores using JOIN
SELECT * FROM Store INNER JOIN Supplier ON Store.supplier_id = Supplier.id WHERE Supplier.id = 1;